<div id="body_devise">
  <div class="container-fluid">
		<div class="row">
				<div class="col-md-4 col-sm-4 col-xs-12"></div>
				<div class="col-md-4 col-sm-4 col-xs-12">
					<div class="form-continer">
							<h2>Sign up</h2>

							<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
					  	<%= devise_error_messages! %>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Nombre</label>
                    <%= f.text_field :name, autocomplete: "nombre", placeholder: "Nombre", class: "form-control" %>
                  </div>

                  <div class="form-group">
                    <label for="exampleInputEmail1">Apellido</label>
                    <%= f.text_field :last_name, autocomplete: "apellido", placeholder: "Apellido", class: "form-control" %>
                  </div>

							  	<div class="form-group">
							    	<label for="exampleInputEmail1">Email</label>
							    	<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
							  	</div>

                  <div class="form-group">
                    <label for="exampleInputEmail1">Telefono</label>
                    <%= f.text_field :phone, autocomplete: "telefono", placeholder: "Telefono", class: "form-control" %>
                  </div>

							  	<div class="form-group">
							    	<label for="exampleInputEmail1">Contrase単a</label>
							    	<% if @minimum_password_length %>
							    	<em>(<%= @minimum_password_length %> caracteres minimo)</em>
							    	<% end %><br />
							    	<%= f.password_field :password, autocomplete: "new-password", placeholder: "Contrase単a", class: "form-control" %>
							  	</div>

							  	<div class="form-group">
										<label for="exampleInputEmail1">Confirmar contrase単a</label>
							    	<%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Contrase単a", class: "form-control" %>
							  	</div>

							  	<div class="actions">
							    	<%= f.submit "Sign up", class: "btn btn-success"%>
							  	</div>
							<% end %>
							<%= render "devise/shared/links" %>
					</div>
				</div>
			</div>
	</div>
	<div class="col-md-4 col-sm-4 col-xs-12"></div>
</div>
