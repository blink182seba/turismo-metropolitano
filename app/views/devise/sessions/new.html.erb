<div id="body_devise">
	<div class="container-fluid">
			<div class="row">
					<div class="col-md-4 col-sm-4 col-xs-12"></div>
				 	<div class="col-md-4 col-sm-4 col-xs-12">
							<div class="form-continer">
									<h2>Iniciar Sesion</h2>
									<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
										  <div class="form-group">
											    <label for="exampleInputEmail1">Email</label>
										    	<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control", id: "exampleInputEmail1"%>
										  </div>

										  <div class="form-group">
												<label for="exampleInputPassword1">Contraseña</label>
										    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Contraseña", class: "form-control", id: "exampleInputPassword1" %>
										  </div>

										  <% if devise_mapping.rememberable? -%>
										    <div class="field checkbox">
										      <%= f.check_box :remember_me %>
										      <label for="exampleInputPassword1">Recordar Contraseña</label>
										    </div>
										  <% end -%>

										  <div class="actions">
										    <%= f.submit "Log in", class: "btn btn-success"%>
										  </div>
									<% end %>
									<%= render "devise/shared/links" %>
							</div>
				</div>
			</div>
		</div>
	<div class="col-md-4 col-sm-4 col-xs-12"></div>
</div>
