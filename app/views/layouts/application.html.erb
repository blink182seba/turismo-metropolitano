<!DOCTYPE html>
<html>
  <head>
    <title>TurismoMetropolitano</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <header class="header">
    		<div class="container">
    			<div class="row">
    				<div class="col">
    					<div class="header_container d-flex flex-row align-items-center justify-content-start">

    						<!-- Logo -->
    						<div class="logo_container">
    							<div class="logo">
    								<div class="logo_image"><img src="#" alt=""></div>
    							</div>
    						</div>

    						<!-- Main Navigation -->
    						<nav class="main_nav ml-auto">
    							<ul class="main_nav_list">
    								<li class="main_nav_item active"><a href="<%= pages_index_path %>">Home</a></li>
    								<li class="main_nav_item"><a href="<%= pages_index_path %>#acerca">Quienes Somos</a></li>
    								<li class="main_nav_item"><a href="<%= trips_path %>">Viajes de temporada</a></li>
    								<li class="main_nav_item"><a href="news.html">Noticias</a></li>
									<li class="main_nav_item"><a href="<%= pages_contacto_path %>">Contacto</a></li>
									<% unless current_user %>
										<li class="main_nav_item"><a href="<%= new_user_session_path %>">Iniciar Sesión</a></li>
									<% else %>
										<li class="main_nav_item" method><%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete %> </li>
									<% end %>

    							</ul>
    						</nav>

    						<!-- Search -->
    						<div class="search">
    							<form action="#" class="search_form">
    								<input type="search" name="search_input" class="search_input ctrl_class" required="required" placeholder="Keyword">
    								<button type="submit" class="search_button ml-auto ctrl_class"><img src="<%= asset_path 'images/search.png' %>" alt=""></button>
    							</form>
    						</div>

    						<!-- Hamburger -->
    						<div class="hamburger ml-auto"><i class="fa fa-bars" aria-hidden="true"></i></div>

    					</div>
    				</div>
    			</div>
    		</div>
    	</header>
      <% if alert.present? %>
      <div class="alert">
        <%= alert %>
      </div>
      <% end %>
    <%= yield %>
    <footer class="footer">
  		<div class="container">
  			<div class="row">
  				<!-- Footer Column -->
  				<div class="col-md-6 footer_col">
  					<div class="contact_info">
  						<div class="contact_info_box">i</div>
  						<div class="contact_info_container">
  							<div class="contact_info_content">
  								<ul>
  									<li class="letra">Direccion: Roman diaz 117 Of 202, Providencia</li>
  									<li class="letra">Telefono: 232244368 / 232244369 </li>
  									<li class="letra">Email: contacto@turismometropolitano.cl </li>
  								</ul>
  							</div>
  							<div class="contact_info_social">
  								<ul>
  									<li><a href="#"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>
  									<li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
  									<li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
  									<li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
  								</ul>
  							</div>
  						</div>
  					</div>
  				</div>
  				<div class="col-md-6 footer_col">
  					<div id="google_map">
  						<div class="map_container">
  							<div id="map"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3329.68283521274!2d-70.62417298532573!3d-33.431512303925565!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9662c587f6795e67%3A0x617bb2b0d6cb6d4!2sRom%C3%A1n+D%C3%ADaz+117%2C+Of+202%2C+Providencia%2C+Regi%C3%B3n+Metropolitana!5e0!3m2!1ses!2scl!4v1534454208074" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe></div>
  						</div>
  					</div>
  				</div>
  			</div>
  		</div>
  	</footer>
  </body>
</html>
